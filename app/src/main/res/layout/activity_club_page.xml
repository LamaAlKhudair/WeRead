<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.clubs.oneClub.clubPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp">


        <ImageView
            android:id="@+id/club_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/black"
            android:paddingRight="10dp"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/club_name"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:text="Club Name" />

        <TextView
            android:id="@+id/club_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:text="Club Owner"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/club_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:text="Club Description"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <ImageView
            android:id="@+id/invite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_share"
            android:layout_alignRight="@id/club_name"
            android:layout_margin="20dp"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/club_tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        //Noura's Code





    </LinearLayout>


</LinearLayout>