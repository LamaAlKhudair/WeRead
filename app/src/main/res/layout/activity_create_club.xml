<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.clubs.CreateClub">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="544dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/UploadImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_upload_image" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/clubName"
            android:layout_width="314dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:hint="Club Name" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-40dp"
            android:text="*"
            android:textColor="#FF0000" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/clubDescription"
            android:layout_width="314dp"
            android:layout_height="82dp"
            android:layout_marginTop="5dp"
            android:hint="Club Description"
            android:maxLength="200" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-40dp"
            android:text="*"
            android:textColor="#FF0000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/create_club_button"
                android:enabled="false"
                android:padding="5dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CreateClub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/loging_rounded_button"
                android:enabled="false"
                android:padding="5dp"
                android:text="Create Club"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/fui_required_field"
            android:textColor="#FF0000" />

    </LinearLayout>

</LinearLayout>